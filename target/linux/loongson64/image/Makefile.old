JFFS2_BLOCKSIZE=256k 512k

include $(TOPDIR)/rules.mk
include $(INCLUDE_DIR)/image.mk

UBI_OPTS = -m 2048 -p 128KiB -s 512
UBIFS_OPTS = -m 2048 -e 124KiB -c 1024

UIMAGE:=$(BIN_DIR)/$(IMG_PREFIX)-uImage.bin

#	gzip -9n -c $(1) > $(1).gz
#	mkimage -A mips -O linux -T kernel -a 0x80200000 -C gzip \
#		-e 0x80200000 -n 'MIPS OpenWrt Linux-$(LINUX_VERSION)' \
#		-d $(1).gz $(2)
define MkImageGzip
	mkimage -A mips -O linux -T kernel -a 0x80200000 -C gzip \
		-e 0x80200000 -n 'MIPS OpenWrt Linux-$(LINUX_VERSION)' \
		-d $(1) $(2)
endef

define Image/Prepare
	$(call MkImageGzip,$(LINUX_DIR)/arch/mips/boot/compressed/vmlinux.bin.z,$(KDIR)/uimage)
endef

#	cp $(KDIR)/uimage $(UIMAGE)
define Image/BuildKernel
	cp $(LINUX_DIR)/vmlinuz $(UIMAGE)
endef

define Image/Build/squashfs
	$(call prepare_generic_squashfs,$(KDIR)/root.squashfs)
endef

define Image/Build
	dd if=$(KDIR)/root.$(1) of=$(BIN_DIR)/$(IMG_PREFIX)-root.$(1) bs=128k conv=sync
endef

$(eval $(call BuildImage))
